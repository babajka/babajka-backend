{
  "port": 8080,
  "publicPath": "public",
  "mongodb": {
    "url": "mongodb://localhost/babajka",
    "options": {}
  },
  "auth": {
    "saltRounds": 8
  },
  "session": {
    "secret": "MUST BE SET IN $BABAJKA_SECRET",
    "resave": false,
    "saveUninitialized": false,
    "cookie": {
      "maxAge": 3600000,
      "secure": false
    },
    "name": "csid"
  },
  "logger": {
    "mode": "dev",
    "writeToFile": false,
    "fileName": "babajka.log"
  },
  "social": {
    "google": {
      "clientId": "MUST BE SET IN $BABAJKA_SECRET",
      "clientSecret": "MUST BE SET IN $BABAJKA_SECRET"
    }
  }
}
