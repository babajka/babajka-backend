{
  "name": "babajka-backend",
  "version": "0.0.1",
  "description": "Express & Node.js app",
  "scripts": {
    "start": "nodemon -w index.js -w . --exec babel-node index.js",
    "start-prod": "npm run build && node build/index.js",
    "build": "babel . -d build --copy-files --ignore node_modules,postman,build",
    "init-db": "babel-node src/db/init.js",
    "lint": "npm run prettify && eslint index.js src/ --fix",
    "precommit": "lint-staged",
    "prettier": "prettier --config .prettierrc --write",
    "prettify": "npm run prettier 'src/**/*.{js,md}' '*.js' '*.md'",
    "watch": "onchange '**/*.{js,md}' -- npm run prettier {{changed}}",
    "mocha": "cross-env NODE_ENV=testing find ./src -name '*tests.js' | cross-env NODE_ENV=testing xargs mocha --require babel-register",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "test": "cross-env NODE_ENV=testing nyc npm run mocha && npm run coverage"
  },
  "lint-staged": {
    "**/*.js": [
      "npm run prettier",
      "eslint --fix",
      "git add"
    ]
  },
  "engines": {
    "node": ">=4.3.2"
  },
  "dependencies": {
    "babel-runtime": "^6.26.0",
    "bcrypt": "^1.0.2",
    "body-parser": "^1.17.2",
    "connect-mongo": "^1.3.2",
    "cors": "^2.8.3",
    "express": "^4.15.3",
    "express-session": "^1.15.4",
    "lodash": "^4.17.4",
    "mongoose": "^4.11.7",
    "morgan": "^1.8.2",
    "node-http-error": "^2.0.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/babajka/babajka-backend.git"
  },
  "author": "babajka team <github.com/babajka>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/babajka/babajka-backend/issues"
  },
  "homepage": "https://github.com/babajka/babajka-backend#readme",
  "main": "index.js",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.1.0",
    "babel-plugin-module-resolver": "^2.7.1",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-regenerator": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.1",
    "coveralls": "^2.13.1",
    "cross-env": "^5.1.1",
    "eslint": "^4.14.0",
    "eslint-config-airbnb-base": "^11.3.2",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-prettier": "^2.4.0",
    "glob": "^7.1.2",
    "husky": "^0.14.3",
    "lint-staged": "^6.0.0",
    "mocha": "^3.5.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.11.0",
    "nyc": "^11.1.0",
    "onchange": "^3.3.0",
    "prettier": "^1.9.2",
    "supertest": "^3.0.0"
  },
  "moduleRoots": [
    "./src"
  ]
}
